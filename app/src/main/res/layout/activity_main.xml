<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#37474F">

    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/Bike" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/aguafina_script"
        android:text="Cyber Bikes Shop"
        android:textColor="#37474F "
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mainImageView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/descriptionImageView"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/description_icon" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-condensed"
                android:text="We sell you the future that belongs for greatest. Visit us and we show you how to reach the impossible"
                android:textColor="#ECEFF1"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/clockImageView"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/clock_icon" />

            <TextView
                android:id="@+id/workingHoursTextView"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-condensed"
                android:text="Come any time"
                android:textColor="#ECEFF1"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/mainImageView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/locationImageView"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/location_icon" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="0"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="5"
                android:fontFamily="sans-serif-condensed"
                android:text="You will find us in LA near the Great Hologen Ark"
                android:textColor="#ECEFF1"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/mainImageView" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>